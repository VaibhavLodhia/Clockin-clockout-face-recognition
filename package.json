{
  "name": "employee-clock-app",
  "version": "1.0.0",
  "type": "module",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "dev": "node scripts/start-dev.js",
    "build:android": "eas build --platform android --profile production",
    "build:android:local": "eas build --platform android --profile production --local",
    "run:android": "npx expo run:android",
    "build:web": "expo export --platform web",
    "build:web:deploy": "expo export --platform web && echo 'Web build ready in dist/ folder. Deploy to Vercel, Netlify, or any static host.'"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.2.0",
